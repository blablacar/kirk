{
  "resolution": {
    "main": "./typings/"
  },
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "jsx": "preserve",
    "allowJs": false,
    "declaration": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  },
  "include": ["node_modules/@types", "src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["build", "node_modules", "src/**/*.unit.tsx", "tools"]
}
