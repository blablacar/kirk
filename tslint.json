{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "rulesDirectory": ["src/", "bin/"],
  "rules": {
    "max-line-length": {
      "options": [100]
    },
    "semicolon": [true, "never"],
    "import-name": false,
    "object-shorthand-properties-first": false,
    "align": false,
    "variable-name": false
  }
}
